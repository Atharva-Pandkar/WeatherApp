<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E2E2E"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2E2E2E"
        android:weightSum="3">

        <android.support.v7.widget.CardView
            android:id="@+id/wind_card"
            android:layout_width="55dp"
            android:layout_height="132dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#2E2E2E"
            android:padding="4dp"
            app:cardBackgroundColor="#161515"
            app:cardCornerRadius="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:weightSum="3">

                <ImageView
                    android:id="@+id/wind_image"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:src="@drawable/weather_windy" />

                <TextView
                    android:id="@+id/wind_speed_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0.00 mmph"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Wind Speed"
                    android:textAlignment="center"
                    android:textSize="15dp" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/pressure_card"
            android:layout_width="55dp"
            android:layout_height="132dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#2E2E2E"
            app:cardBackgroundColor="#161515"
            app:cardCornerRadius="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/pressure_image"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:src="@drawable/gauge" />

                <TextView
                    android:id="@+id/pressure_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0.00 mmph"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pressure"
                    android:textAlignment="center"
                    android:textSize="15dp" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/precipitation_card"
            android:layout_width="55dp"
            android:layout_height="132dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#2E2E2E"
            app:cardBackgroundColor="#161515"
            app:cardCornerRadius="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/precipitation_image"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:src="@drawable/weather_pouring" />

                <TextView
                    android:id="@+id/precipitation_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0.00 mmph"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Precipitation"
                    android:textAlignment="center"
                    android:textSize="15dp" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2E2E2E"
        android:weightSum="3">

        <android.support.v7.widget.CardView
            android:id="@+id/temperature_card"
            android:layout_width="55dp"
            android:layout_height="132dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#2E2E2E"
            app:cardBackgroundColor="#161515"
            app:cardCornerRadius="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/temperature_image"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:src="@drawable/thermometer" />

                <TextView
                    android:id="@+id/temperature_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0.00 F"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Temperature"
                    android:textAlignment="center"
                    android:textSize="15dp" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/summary_card"
            android:layout_width="55dp"
            android:layout_height="132dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#2E2E2E"
            app:cardBackgroundColor="#161515"
            app:cardCornerRadius="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:src="@drawable/weather_sunny" />

                <TextView
                    android:id="@+id/summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="clear day"
                    android:textAlignment="center"
                    android:textSize="17dp"
                    android:textStyle="bold" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/humidity_card"
            android:layout_width="55dp"
            android:layout_height="132dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#2E2E2E"
            app:cardBackgroundColor="#161515"
            app:cardCornerRadius="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/humidity_image"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:src="@drawable/water_percent" />

                <TextView
                    android:id="@+id/humidity_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0.00 mmph"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Humidity"
                    android:textAlignment="center"
                    android:textSize="15dp" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2E2E2E"
        android:weightSum="3">

        <android.support.v7.widget.CardView
            android:id="@+id/visibility_card"
            android:layout_width="55dp"
            android:layout_height="132dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#2E2E2E"
            app:cardBackgroundColor="#161515"
            app:cardCornerRadius="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/visibility_image"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:src="@drawable/eye_outline" />

                <TextView
                    android:id="@+id/visibility_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0.00 mmph"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Visibility"
                    android:textAlignment="center"
                    android:textSize="15dp" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cloudcover_card"
            android:layout_width="55dp"
            android:layout_height="132dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#2E2E2E"
            app:cardBackgroundColor="#161515"
            app:cardCornerRadius="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/cloudcover_image"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:src="@drawable/weather_fog" />

                <TextView
                    android:id="@+id/cloudcover_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0.00 mmph"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cloud Cover"
                    android:textAlignment="center"
                    android:textSize="15dp" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/ozone_card"
            android:layout_width="55dp"
            android:layout_height="132dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#2E2E2E"
            app:cardBackgroundColor="#161515"
            app:cardCornerRadius="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ozone_image"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:paddingTop="5dp"
                    android:src="@drawable/earth" />

                <TextView
                    android:id="@+id/ozone_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="318.60 DU"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ozone"
                    android:textAlignment="center"
                    android:textSize="15dp" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>
</LinearLayout>